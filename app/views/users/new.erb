<h3>Enter your information below to register a new user account:</h3>
<p><% if @errors %></p>
  <ul><% @errors.each do |error| %>
    <li><%= error %></li>
  </ul>
  <% end %>
<% end %>
<form id=new_user action='/users' method='post'>
  <label for='username'>Username:</label>
  <input type='text' placeholder="username" name=user[username]><br>
  <label for='email'>Email:</label>
  <input type='text' placeholder="email" name=user[email]><br><label for='password'>Password:</label>
  <input type='text' placeholder="password" name=user[password]><br>
  <input type='submit' value='Register'>
</form>